  "main": "index.js",
  "engines": {
    "node": "12.7.0"
  },
  "scripts": {
    "dev": "nodemon --exec ts-node src/server.ts",
    "build": "npx tsc && npm run copy-schemas ",
    "copy-schemas": "npx cpx src/**/*.graphql dist",
