    "@graphql-modules/core": "^0.7.8",
    "apollo-server": "^2.7.2",
    "cpx": "^1.5.0",
    "graphql": "^14.4.2",
    "graphql-import-node": "0.0.4",
    "jsonwebtoken": "^8.5.1",
    "mongoose": "^5.6.6",
    "reflect-metadata": "^0.1.13"
  },
  "devDependencies": {
    "@types/graphql": "^14.2.3",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongoose": "^5.5.11",
    "dotenv": "^8.0.0",
    "nodemon": "^1.19.1",
    "ts-node": "^8.3.0",
    "typescript": "^3.5.3"
  }
